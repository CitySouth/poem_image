    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/text_color_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/ic_color_lens_black_24dp"
                android:scaleType="center" />

            <ImageView
                android:id="@+id/text_font_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/ic_text_fields_black_24dp"
                android:scaleType="center"/>
            <ImageView
                android:id="@+id/text_font_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/ic_text_format_black_24dp"
                android:scaleType="center"/>
            <ImageView
                android:id="@+id/btn_text_color_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:src="@drawable/ic_done_black_24dp"
                android:scaleType="center"/>

        </LinearLayout>

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="81dip"
                android:background="@android:color/white">

                <com.seu.magiccamera.view.edit.text.ColorTagImageView
                    android:id="@+id/color_tag"
                    android:layout_width="240dp"
                    android:layout_height="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/colortag"
                    />
            </RelativeLayout>

        <include
            android:id="@+id/text_font_layout"
            layout="@layout/font_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="81dip" />

        <include
            android:id="@+id/text_font_more_layout"
            layout="@layout/font_more_layout"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="81dip" />

    </FrameLayout>
